{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "paths": { "~/*": ["*"] },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
